<h1>Ajouter un nouveau commentaire</h1>
<%= form_with(model:  [current_user, @post, @comment], local: true) do |form| %>
 
  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>
 
 
<br>
 
  <div>
    <%= form.submit  "Add comment" %>
  </div>
<% end %>
<%= link_to "Back to post", user_post_path(@post.user, @post) %>
 
 
