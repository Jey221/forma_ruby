<p style="color: green"><%= notice %></p>

<h1> <%= @post.title %> </h1>

<p> <%= @post.body %> </p>

<% @comments.each do |c| %>
  <p><%= c.body %></p>
  <% user_id = c.user_id %>
  <% user_name = User.find(user_id).last_name %>
  <p><%= "User: #{user_name}" %></p>

  <%= link_to "Update comments", edit_user_post_comment_path(@user,@post, c) %> |
  <%= button_to "delete comments", user_post_comment_path(@post.user, @post, c), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' }  %> |
<% end %>
<div>
  <%= link_to "Add comment", new_user_post_comment_path(@post.user, @post) %> |
  <%= link_to "Edit this post", edit_user_post_path(@user,@post) %> |
  <%= link_to "Back to user posts", user_posts_path %>
</div>
